            </columns>
        </TableView>
        <Button fx:id="addButton" onAction="#openCreatePage" defaultButton="true" layoutX="200.0" layoutY="395.0" mnemonicParsing="false" prefHeight="8.0" prefWidth="300.0" text="Add new department" textAlignment="CENTER">
