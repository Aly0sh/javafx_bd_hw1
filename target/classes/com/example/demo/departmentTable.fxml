    <children>
        <TableView fx:id="departmentTable"  prefHeight="368.0" prefWidth="730.0">
            <columns>
                <TableColumn fx:id="Dname" prefWidth="100.0" text="Name" />
                <TableColumn fx:id="Dnumber" prefWidth="100.0" text="Number"/>
                <TableColumn fx:id="Mgr_ssn" prefWidth="100.0" text="Mgr ssn" />
                <TableColumn fx:id="Mgr_start_date" prefWidth="100.0" text="Mgr start date" />
